{
  "name": "talkie",
  "private": true,
  "scripts": {
    "start": "concurrently \"cd frontend && npx expo run:android\" \"cd backend && node server.js\"",
    "fe": "cd frontend && npx expo run:android",
    "fe1": "cd frontend && npx expo run:android --device p1",
    "fe2": "cd frontend && npx expo run:android --device p2",
    "be": "cd backend && node server.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "emu1": "emulator -avd p1 -no-snapshot-load",
    "emu2": "emulator -avd p2 -no-snapshot-load"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "dotenv": "^16.4.7",
    "expo": "^52.0.39",
    "firebase": "^11.4.0",
    "react": "18.3.1",
    "react-native": "0.76.7",
    "react-native-dotenv": "^3.4.11",
    "react-native-responsive-screen": "^1.4.2",
    "react-native-svg": "^15.11.2",
    "talkie": "file:"
  },
  "devDependencies": {
    "@types/react-native": "^0.73.0",
    "@react-native-community/cli": "latest"
  },
  "version": "1.0.0"
}
